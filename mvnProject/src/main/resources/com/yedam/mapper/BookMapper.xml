<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mapper.BookMapper">
        <!-- namespace 속성은 바로 이 mapper의 이름인데 이걸로 이 mapper를 구분한다 
             그렇기 때문에 이름을 일치시켜주자. 여기에는 어떤 이름이 들어가도 상관없다.-->        

    <!-- 단건조회 -->
	<select id="selectBook" resultType="com.yedam.vo.Book" parameterType="int">
		select * from book where id = #{id}
	</select>
	
	<!-- 목록조회 -->
	<select id="selectList" resultType="com.yedam.vo.Book">
		select * 
		from book
		order by id desc
	</select>
	
</mapper>